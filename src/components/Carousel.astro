---
const { imageOne, imageTwo, imageThree, imageFour, imageFive, imageSix, imageSeven, imageEight } = Astro.props;
---

<div class="slideshow-container">
    <div class="slides">
      <img src={imageOne} alt="Slide 1">
      <img src={imageTwo} alt="Slide 2">
      <img src={imageThree} alt="Slide 3">
      <img src={imageFour} alt="Slide 4">
      <img src={imageFive} alt="Slide 5">
      <img src={imageSix} alt="Slide 6">
      <img src={imageSeven} alt="Slide 7">
      <img src={imageEight} alt="Slide 8">
    </div>
