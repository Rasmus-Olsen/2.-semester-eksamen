<div class="buy-grid_1_1">
  <div class="text">
    <div class="select-button size">
      <label for="size">Size</label>
      <div class="options">
        <button class="select-option" value="signatur">Signatur</button>
        <button class="select-option" value="everyday">Everyday</button>
        <button class="select-option" value="ekstravagant">Ekstravagant</button>        
      </div>
    </div>

    <div class="amount-selector">
      <label for="delivery">Amount</label>
      <div class="options-amount">
        <button class="minus">-</button>
        <input type="number" class="amount" value="1" min="1">
        <button class="plus">+</button>
      </div>
    </div>

    <div class="select-button delivery">
      <label for="delivery">Delivery</label>
      <div class="options">
        <button class="select-option" value="express">Express</button>
        <button class="select-option" value="standard">Standard</button>
        <button class="select-option" value="economy">Economy</button>
      </div>        
    </div>

    <input class="btn" type="submit" value="Submit">

    </div>
    <img class="buy-image" src="/public/Weekly-bouquets/buyweekly1.png" alt="">
</div>
<style> 


.buy-grid_1_1 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--gap-large);
  align-items: center;
  margin-bottom: var(--margin-bottom);
  margin-top: var(--margin-bottom);
}
.buy-grid_1_1 img {
  border-radius: 32px;
  background-blend-mode: soft-light;
    background: rgba(253, 235, 225, 0.25);
    backdrop-filter: blur(7.8px);
    box-shadow: 0px 4px 8px 0px rgba(247, 197, 204, 0.5), 0px 4px 8px 0px rgba(247, 197, 204, 0.5)
}

.text {
  gap: 10px;
  display: grid;
  grid-template-columns: 1fr;
}
.button-select {
  display: flex;
}

label {
  display: block;
  /* font-family: "Carena", sans-serif; */
  /* color: var(--primary-color) */
}

button {
  font-family: "Carena", sans-serif;
  color: var(--primary-color)
  
}


.options {
  display: flex;
  gap: 15px;
  margin-top: 5px;
}

.options-amount {
  display: flex;
  gap: 5px;
  margin-top: 5px;
}

.select-option {
  padding: 8px 15px;
  border-radius: 100px;
  border: 1px solid var(--secoundary-color);
  background: rgba(253, 235, 225, 0.25);
  box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);
  backdrop-filter: blur(10px);
  background-blend-mode: soft-light;
  cursor: pointer;
}

.select-option:hover {
animation: pulse 1s infinite; 
}

.select-option.active {
background-color:  var(--secoundary-color);;
color: var(--primary-color);
}

.select-option:focus {
outline: none;
}

.amount-selector {
display: flex;
align-items: center;
flex-wrap: wrap;
}

.amount-selector label {
  width: 100%;
}

.amount {
width: 50px;
color: var(--primary-color);
font-family: "Carena", sans-serif;
padding: 7px;
text-align: center;
border-radius: 100px;
border: 1px solid var(--secoundary-color);;
background: rgba(253, 235, 225, 0.25);
box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);
backdrop-filter: blur(10px);
background-blend-mode: soft-light;
}

/* Remove spinner controls in WebKit browsers (Chrome, Safari) */
.amount::-webkit-outer-spin-button,
.amount::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Remove spinner controls in Firefox */
.amount {
  -moz-appearance: textfield;
}

.minus,
.plus {
padding: 0px 15px;
cursor: pointer;
border-radius: 100px;
border: 1px solid var(--secoundary-color);;
background: rgba(253, 235, 225, 0.25);
box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);
backdrop-filter: blur(10px);
background-blend-mode: soft-light;
font-size: 20px;
}

.minus:hover,
.plus:hover {
background-color: var(--secoundary-color);;
}

.btn {
box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);
backdrop-filter: blur(10px);
background-blend-mode: soft-light;
outline: none;
cursor: pointer;
border: 1px solid var(--secoundary-color);
padding: 10px;
text-align: center;
border-radius: 100px;
color: var(--primary-color);
width: 150px;
transition: all 0.2s ease-in-out;
font-size: 14px;
font-family: "Carena", sans-serif;
margin-top: 5px;
}

.btn:hover {
animation: pulse 1s infinite; 
}





@media (max-width: 800px) {  
  .buy-grid_1_1 {
    grid-template-columns: 1fr;
  }
  .buy-image {
    order: -1;
  }
}
</style>

<script>
  // Buy function
  document.addEventListener("DOMContentLoaded", function() {
    const sizeOptions = document.querySelectorAll(".size .select-option");
    const deliveryOptions = document.querySelectorAll(".delivery .select-option");

    sizeOptions.forEach(option => {
      option.addEventListener("click", function() {
        sizeOptions.forEach(opt => opt.classList.remove("active"));
        this.classList.add("active");
        document.getElementById("selected-size").value = this.value;
      });
    });

    deliveryOptions.forEach(option => {
      option.addEventListener("click", function() {
        deliveryOptions.forEach(opt => opt.classList.remove("active"));
        this.classList.add("active");
        document.getElementById("selected-delivery").value = this.value;
      });
    });
  });

  // Amount
  document.addEventListener("DOMContentLoaded", function() {
    const amountInput = document.querySelector(".amount");
    const minusButton = document.querySelector(".minus");
    const plusButton = document.querySelector(".plus");

    minusButton.addEventListener("click", function() {
      let currentValue = parseInt(amountInput.value);
      if (currentValue > 1) {
        amountInput.value = currentValue - 1;
      }
    });

    plusButton.addEventListener("click", function() {
      let currentValue = parseInt(amountInput.value);
      amountInput.value = currentValue + 1;
    });
  });
</script>