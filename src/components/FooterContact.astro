<style>
    footer {
        background-image: url("/public/footerbg.svg");
        height: 350px;
        background-repeat: no-repeat;
        background-position: center bottom;
        grid-template-columns: 2fr 1fr;
        position: relative;
        display: block;
    }


    .icons {
        display: flex;
        gap: 20px;
        right: 20px;
        position: absolute;
        bottom: 20px;
    }

    .icons a {
        transition: all 0.2s ease-in-out;
    }

    .icons a:hover {
        animation: pulse 1s infinite; /* Apply the pulse animation */
    }

    .icons a img {
        height: 40px;
    }

    .contact-form {
        position: absolute;
        right: 0;
        left: 0;
        width: 40%;
        margin: 10px auto;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        
    }

    input {
        font-family: "Carena", sans-serif;
        
    }

    input::placeholder, textarea::placeholder {
        color: var(--primary-color);
        opacity: 1;
    }

    input.text {
        padding: 6px;
        text-align: center;
        border-radius: 16px;
        border: 1px solid #F7C5CC;
        background: rgba(253, 235, 225, 0.25);
        box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);
        backdrop-filter: blur(10px);
        background-blend-mode: soft-light;
    }

    textarea {
        height: 80px;
        resize: none;
        padding: 6px;
        text-align: center;
        border-radius: 16px;
        font-family: "Carena", sans-serif;
        border: 1px solid #F7C5CC;
        background: rgba(253, 235, 225, 0.25);
        box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);
        backdrop-filter: blur(10px);
        background-blend-mode: soft-light;
    }

    .btn {
        border: none;
        outline: none;
        cursor: pointer;
        border: 1px solid #F7C5CC;
        background: rgba(253, 235, 225, 0.25);
        margin: 0 auto;
        padding: 10px 30px;
        border-radius: 32px;
        color: var(--primary-color);
        position: absolute;
        left: 0;
        right: 0;
        width: 150px;
        transition: all 0.2s ease-in-out;
    }

    .btn:hover {
        animation: pulse 1s infinite; /* Apply the pulse animation */
    } 

