---

import MainLayout from "../layouts/MainLayouts.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Hero from "../components/Hero.astro"
---

<body class="contact">
	<MainLayout>
		<Header/>
		<div class="contact-content">
			<h1>Contact</h1>
		</div>
		<div class="hero-contactform">
			<div class="contact-form">
				<form>
					<input class="text" type="text" id="name" name="Name" placeholder="Name*" required>
					<input class="text" type="email" id="email" name="Email" placeholder="Email*" required>
					<textarea id="arrangement" name="arrangement" placeholder="Arrangement*" required></textarea>
					<input class="contact-btn" type="submit" value="Submit">
				</form>
			</div>
		</div>
		<div class="insta">
			<p class="stor-tekst">Find os p√• instagram</p>
			<a target="_blank" class="carena-link" href="https://www.instagram.com/rhodflowers/"><p class="carena">@rhodflowers</p></a>
			<img class="qr-kode" src="/public/qr-kode.webp" alt="">
		</div>
		<Footer/>
	</MainLayout>	
</body>

<style>

	.contact-content {
		max-width: var(--content);
		margin: 0 auto
	}

	.hero-contactform {
		background-image: url("/public/contact-hero.png");
	    height: 650px;
    	background-repeat: no-repeat;
    	display: flex;
    	width: 100vw;
    	background-size: cover;
	}

	.contact-form {
		width: 40%;
    	margin: auto;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        
    }

    input {
        font-family: "Carena", sans-serif;
        
    }

    input::placeholder, textarea::placeholder {
        color: var(--primary-color);
        opacity: 1;
    }

    input.text {
        padding: 6px;
        text-align: center;
		border-radius: 100px;
    	height: 40px;
        border: 1px solid #F7C5CC;
        background: rgba(253, 235, 225, 0.25);
        box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);
        backdrop-filter: blur(10px);
        background-blend-mode: soft-light;
    }

    textarea {
		height: 90px;
        resize: none;
        padding: 6px;
        text-align: center;
        border-radius: 16px;
        font-family: "Carena", sans-serif;
        border: 1px solid #F7C5CC;
        background: rgba(253, 235, 225, 0.25);
        box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);
        backdrop-filter: blur(10px);
        background-blend-mode: soft-light;
    }

    .contact-btn {
        border: none;
        outline: none;
        cursor: pointer;
        border: 1px solid #F7C5CC;
        background: rgba(253, 235, 225, 0.25);
        margin: 0 auto;
        padding: 10px 30px;
        border-radius: 32px;
        color: var(--primary-color);
        left: 0;
        right: 0;
        width: 150px;
        transition: all 0.2s ease-in-out;
        box-shadow: 0px 4px 4px 0px rgba(247, 197, 204, 0.25), 0px 4px 4px 0px rgba(247, 197, 204, 0.25);

    }
	.contact-btn:hover {
    	animation: pulse 1s infinite; 
	}

	.insta {
		text-align: center;
		margin-top: 80px;
	}
	.qr-kode {
		margin: 20px auto;
		height: 400px;
    	width: 400px;
    	object-fit: cover;
    	border-radius: 100%;	
	}

	.stor-tekst {
		font-size: 40px;
		margin: 5px;
	}

	.carena-link {	
		text-decoration: none;
		transition: all 0.2s ease-in-out;
		display: inline-block; 
	}

	.carena-link:hover {
    animation: pulse 1s infinite;
	
}
	.carena {
		font-size: 40px;
	}

	@media (max-width: 800px) {
		h1 {
			margin: 0 20px;
		}
		.contact-form {
			width: 90%;
		}
	}

</style>

